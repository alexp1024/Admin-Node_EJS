    <% include ../template/main/head %>
</head>

<body>
    <% include ../template/main/sidebar %>
    <!-- Main content -->
    <!-- Main content -->
    <div class="main-content" id="panel">
        <!-- Topnav -->
        <% include ../template/main/header %>
        <!-- Header -->


        <!-- Header -->
        <div class="header bg-primary pb-6">
            <div class="container-fluid">
                <div class="header-body">
                    <div class="row align-items-center py-4">
                        <div class="col-lg-6 col-7">
                            <h6 class="h2 text-white d-inline-block mb-0">Form elements</h6>
                            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                                    <li class="breadcrumb-item"><a href="#">Forms</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Form elements</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="col-lg-6 col-5 text-right">
                            <a href="#" class="btn btn-sm btn-neutral">New</a>
                            <a href="#" class="btn btn-sm btn-neutral">Filters</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt--6">
            <div class="row">
                <div class="col">
                    <div class="card-wrapper">
                        <!-- Custom form validation -->
                        <div class="card">
                            <!-- Card header -->
                            <div class="card-header">
                                <h3 class="mb-0">Category Create


                                </h3>
                            </div>
                            <!-- Card body -->
                            <div class="card-body">
                                <% if(category){ %>
                                <form class="needs-validation" novalidate method="POST"
                                    action="/service/update-category">
                                    <input type="hidden" name="_id" value="<%= category._id %>">
                                    <%}else{%>
                                    <form class="needs-validation" novalidate method="POST"
                                        action="/service/create-category">
                                        <%}%>
                                
                                    <div class="form-row">
                                        <div class="col-md-4 mb-3">
                                            <label class="form-control-label" for="name">Category
                                                name</label>
                                            <% if(category){ %>
                                        <input type="text" class="form-control" id="name" placeholder="name" name="name"
                                            value="<%= category.name %>" required>

                                        <%}else{ %>
                                        <input type="text" class="form-control" id="name" placeholder="name" name="name"
                                            value="" required>
                                        <%}%>
                                            <!-- <div class="valid-feedback">
                                                 Looks good!
                                             </div> -->
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-4 mb-3">
                                            <label class="form-control-label" for="location">Location</label>
                                            <% if(category){ %>
                                        <input type="text" class="form-control" id="location" placeholder="location"
                                            name="location" value="<%= category.location %>" required>
                                        <%}else{%>
                                        <input type="text" class="form-control" id="location" placeholder="location"
                                            name="location" value="" required>
                                        <%}%>
                                            
                                            <!-- <div class="valid-feedback">
                                                 Looks good!
                                             </div> -->
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-4 mb-3">
                                            <label class="form-control-label" for="validationCustom01">Type</label>
                                            <% if(category){ %>
                                        <input type="text" class="form-control" id="validationCustom01"
                                            placeholder="Type" name="type" value="<%= category.type %>" required>
                                        <%}else{%>
                                        <input type="text" class="form-control" id="validationCustom01"
                                            placeholder="Type" name="type" value="" required>
                                        <%}%>
                                            
                                            <!-- <div class="valid-feedback">
                                                 Looks good!
                                             </div> -->
                                        </div>
                                    </div>
                                    <button class="btn btn-primary" type="submit">Save</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <script>
                // Example starter JavaScript for disabling form submissions if there are invalid fields
                (function () {
                    // support_set();

                    $("#support").click(function () {
                        support_set();
                    })
                    'use strict';
                    window.addEventListener('load', function () {
                        // Fetch all the forms we want to apply custom Bootstrap validation styles to
                        var forms = document.getElementsByClassName('needs-validation');
                        // Loop over them and prevent submission
                        var validation = Array.prototype.filter.call(forms, function (form) {
                            form.addEventListener('submit', function (event) {
                                if (form.checkValidity() === false) {
                                    event.preventDefault();
                                    event.stopPropagation();
                                }
                                form.classList.add('was-validated');
                            }, false);
                        });
                    }, false);
                })();
            </script>
            <!-- Footer -->
            <% include ../template/main/footer %>
                            </div>
                        </div>
                        <% include ../template/main/common-script %>
</body>

</html>